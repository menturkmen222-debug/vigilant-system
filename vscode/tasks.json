{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug APK",
            "type": "shell",
            "command": "./gradlew assembleDebug",
            "windows": {
                "command": ".\\gradlew.bat assembleDebug"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "./gradlew clean",
            "windows": {
                "command": ".\\gradlew.bat clean"
            },
            "group": "build"
        }
    ]
}